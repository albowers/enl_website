document.addEventListener('DOMContentLoaded', function() {
    
    // Mobile Navigation Toggle
    const navToggle = document.querySelector('.nav-toggle');
    if (navToggle) {
        navToggle.addEventListener('click', function() {
            document.querySelector('nav ul').classList.toggle('show');
        });
    }
    
    // Citation Modal Functionality
    const modal = document.getElementById('citation-modal');
    const citeBtns = document.querySelectorAll('.cite-btn');
    const closeBtn = document.querySelector('.close-button');
    const formatBtns = document.querySelectorAll('.format-btn');
    const copyBtn = document.querySelector('.copy-button');
    
    if (modal) {
        // Citation data object
        const citations = {
            paper1: {
                apa: "Bowers, A., Smith, J., & Johnson, L. (2024). Neural Correlates of Cognitive Processing: An EEG Study. Journal of Neuroscience Research, 42(3), 215-230. https://doi.org/10.1000/xyz123",
                mla: "Bowers, Andrew, et al. \"Neural Correlates of Cognitive Processing: An EEG Study.\" Journal of Neuroscience Research, vol. 42, no. 3, 2024, pp. 215-230. https://doi.org/10.1000/xyz123",
                chicago: "Bowers, Andrew, Jane Smith, and Leo Johnson. \"Neural Correlates of Cognitive Processing: An EEG Study.\" Journal of Neuroscience Research 42, no. 3 (2024): 215-230. https://doi.org/10.1000/xyz123",
                bibtex: "@article{Bowers2024Neural,\n  title={Neural Correlates of Cognitive Processing: An EEG Study},\n  author={Bowers, Andrew and Smith, Jane and Johnson, Leo},\n  journal={Journal of Neuroscience Research},\n  volume={42},\n  number={3},\n  pages={215--230},\n  year={2024},\n  doi={10.1000/xyz123}\n}"
            },
            paper2: {
                apa: "Bowers, A., & Lee, S. (2023). Temporal Dynamics of Brain Activity During Memory Formation. Cognitive Neuroscience, 15(2), 112-128. https://doi.org/10.1000/abc456",
                mla: "Bowers, Andrew, and Sarah Lee. \"Temporal Dynamics of Brain Activity During Memory Formation.\" Cognitive Neuroscience, vol. 15, no. 2, 2023, pp. 112-128. https://doi.org/10.1000/abc456",
                chicago: "Bowers, Andrew, and Sarah Lee. \"Temporal Dynamics of Brain Activity During Memory Formation.\" Cognitive Neuroscience 15, no. 2 (2023): 112-128. https://doi.org/10.1000/abc456",
                bibtex: "@article{Bowers2023Temporal,\n  title={Temporal Dynamics of Brain Activity During Memory Formation},\n  author={Bowers, Andrew and Lee, Sarah},\n  journal={Cognitive Neuroscience},\n  volume={15},\n  number={2},\n  pages={112--128},\n  year={2023},\n  doi={10.1000/abc456}\n}"
            },
            paper3: {
                apa: "Bowers, A., Martin, K., & Chen, H. (2023). Novel Methods for EEG Data Analysis in Clinical Settings. In Proceedings of the International Conference on Biomedical Engineering (pp. 423-435).",
                mla: "Bowers, Andrew, et al. \"Novel Methods for EEG Data Analysis in Clinical Settings.\" Proceedings of the International Conference on Biomedical Engineering, 2023, pp. 423-435.",
                chicago: "Bowers, Andrew, Katherine Martin, and Huan Chen. \"Novel Methods for EEG Data Analysis in Clinical Settings.\" In Proceedings of the International Conference on Biomedical Engineering, 423-435. 2023.",
                bibtex: "@inproceedings{Bowers2023Novel,\n  title={Novel Methods for EEG Data Analysis in Clinical Settings},\n  author={Bowers, Andrew and Martin, Katherine and Chen, Huan},\n  booktitle={Proceedings of the International Conference on Biomedical Engineering},\n  pages={423--435},\n  year={2023}\n}"
            },
            paper4: {
                apa: "Bowers, A., & Wilson, T. (2022). Advances in EEG Technology for Neurological Research. In R. Brown & S. Davis (Eds.), Handbook of Neuroimaging Techniques (pp. 145-172). Academic Press.",
                mla: "Bowers, Andrew, and Thomas Wilson. \"Advances in EEG Technology for Neurological Research.\" Handbook of Neuroimaging Techniques, edited by Robert Brown and Susan Davis, Academic Press, 2022, pp. 145-172.",
                chicago: "Bowers, Andrew, and Thomas Wilson. \"Advances in EEG Technology for Neurological Research.\" In Handbook of Neuroimaging Techniques, edited by Robert Brown and Susan Davis, 145-172. Academic Press, 2022.",
                bibtex: "@incollection{Bowers2022Advances,\n  title={Advances in EEG Technology for Neurological Research},\n  author={Bowers, Andrew and Wilson, Thomas},\n  booktitle={Handbook of Neuroimaging Techniques},\n  editor={Brown, Robert and Davis, Susan},\n  publisher={Academic Press},\n  pages={145--172},\n  year={2022}\n}"
            }
        };
        
        let currentPaper = '';
        let currentFormat = 'apa';
        
        // Open modal with citation
        citeBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                currentPaper = this.dataset.id;
                updateCitation();
                modal.style.display = 'flex';
            });
        });
        
        // Close modal
        if (closeBtn) {
            closeBtn.addEventListener('click', function() {
                modal.style.display = 'none';
            });
        }
        
        // Click outside to close
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // Switch citation format
        formatBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                formatBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentFormat = this.dataset.format;
                updateCitation();
            });
        });
        
        // Copy citation
        if (copyBtn) {
            copyBtn.addEventListener('click', function() {
                const citationText = document.getElementById('citation-content').textContent;
                navigator.clipboard.writeText(citationText).then(() => {
                    const originalText = copyBtn.textContent;
                    copyBtn.textContent = 'Copied!';
                    setTimeout(() => {
                        copyBtn.textContent = originalText;
                    }, 2000);
                });
            });
        }
        
        // Update citation text
        function updateCitation() {
            const citationContent = document.getElementById('citation-content');
            if (citations[currentPaper] && citations[currentPaper][currentFormat]) {
                citationContent.textContent = citations[currentPaper][currentFormat];
            }
        }
    }
    
    // Publications filter functionality
    const yearFilter = document.getElementById('year-filter');
    const typeFilter = document.getElementById('type-filter');
    const searchBox = document.getElementById('pub-search');
    
    if (yearFilter && typeFilter && searchBox) {
        const filters = [yearFilter, typeFilter];
        
        // Event listeners for filter changes
        filters.forEach(filter => {
            filter.addEventListener('change', filterPublications);
        });
        
        searchBox.addEventListener('input', filterPublications);
        
        function filterPublications() {
            const year = yearFilter.value;
            const type = typeFilter.value;
            const searchTerm = searchBox.value.toLowerCase();
            
            const publicationItems = document.querySelectorAll('.publication-list li');
            
            publicationItems.forEach(item => {
                const publicationYear = item.querySelector('.pub-year').textContent;
                const publicationContent = item.querySelector('.pub-content').textContent.toLowerCase();
                
                const yearMatch = year === 'all' || publicationYear.includes(year);
                const typeMatch = type === 'all' || 
                    (type === 'journal' && item.closest('h3').textContent.includes('Journal')) ||
                    (type === 'conference' && item.closest('h3').textContent.includes('Conference')) ||
                    (type === 'book' && item.closest('h3').textContent.includes('Book'));
                const searchMatch = searchTerm === '' || publicationContent.includes(searchTerm);
                
                if (yearMatch && typeMatch && searchMatch) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    }
    
    // Projects filter functionality
    const projectFilter = document.getElementById('project-filter');
    if (projectFilter) {
        projectFilter.addEventListener('change', function() {
            const category = this.value;
            const projectItems = document.querySelectorAll('.project-item');
            
            projectItems.forEach(item => {
                if (category === 'all' || item.dataset.category === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    }
    
    // Add animation class to elements when they come into view
    const animateOnScroll = function() {
        const elements = document.querySelectorAll('.animate-on-scroll');
        
        elements.forEach(element => {
            const elementPosition = element.getBoundingClientRect().top;
            const windowHeight = window.innerHeight;
            
            if (elementPosition < windowHeight - 50) {
                element.classList.add('animated');
            }
        });
    };
    
    window.addEventListener('scroll', animateOnScroll);
    
    // Run once on page load
    animateOnScroll();
});
                    
